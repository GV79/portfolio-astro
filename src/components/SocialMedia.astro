---
import { Icon } from 'astro-icon';

const LINKEDIN_URL = 'https://www.linkedin.com/in/giavinh-lam-aa5bb2117/';
const GITHUB_URL = 'https://github.com/GV79/portfolio-astro';
const EMAIL_LINK = 'mailto:giavinhlam@gmail.com';
---

<footer class='socialMedia_container__JxXSZ'>
  <a target='_blank' rel='noopener noreferrer' href={LINKEDIN_URL} class='icon-link'>
    <Icon name='linkedin' aria-hidden='true' />
    LINKEDIN
  </a>
  <a target='_blank' rel='noopener noreferrer' href={GITHUB_URL} class='icon-link'>
    <Icon name='github' aria-hidden='true' />
    GITHUB
  </a>
  <a href={EMAIL_LINK} class='icon-link'>
    <Icon name='email' aria-hidden='true' />
    EMAIL
  </a>
</footer>

<style>
  footer {
    display: flex;
    margin-top: auto;
    justify-content: flex-end;
    text-align: right;
  }

  [astro-icon] {
    height: 2.5rem;
    width: 2.5rem;
    margin: 0 0.1rem 1rem 0.1rem;
  }

  .icon-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-weight: 600;
    fill: var(--t-subdue);
    color: var(--t-subdue);
    padding: 1rem 0 0 2.5rem;
    outline: none;
  }

  .icon-link:hover,
  .icon-link:focus-visible {
    fill: var(--c-dark-gray);
    color: var(--c-dark-gray);
  }

  @media only screen and (max-width: 1100px) {
    footer {
      justify-content: center;
    }

    .icon-link {
      padding: 1rem;
    }
  }
</style>
